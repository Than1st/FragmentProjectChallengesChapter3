<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentKeempat">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/et_usia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="18dp"
        android:textSize="24sp"
        android:inputType="number"
        android:hint="@string/masukkan_usia_text"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintBottom_toTopOf="@id/et_alamat"/>
    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="18dp"
        android:textSize="24sp"
        android:hint="@string/masukkan_alamat_text"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintBottom_toTopOf="@id/et_pekerjaan"/>
    <EditText
        android:id="@+id/et_pekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="18dp"
        android:textSize="24sp"
        android:hint="@string/masukkan_pekerjaan_text"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintBottom_toTopOf="@id/btn_to_three"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_to_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_screen_3_text"
        android:textSize="20sp"
        android:backgroundTint="@color/biru_muda"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed-medium"
        app:cornerRadius="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>