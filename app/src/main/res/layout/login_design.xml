<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp"
    app:cardElevation="16dp"
    android:background="@drawable/login_shape">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/ic_baseline_account_circle"
            app:layout_constraintBottom_toTopOf="@id/login_design"
            app:layout_constraintTop_toTopOf="@id/login_design"
            app:layout_constraintStart_toStartOf="@id/login_design"
            app:layout_constraintEnd_toEndOf="@id/login_design"
            app:tint="@color/biru_muda"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="@string/login_text"
            android:gravity="center"
            android:padding="24dp"/>
        <EditText
            android:id="@+id/et_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="18dp"
            android:textSize="24sp"
            android:hint="@string/masukkan_nama_text"
            android:background="@drawable/custom_edit_text"
            tools:ignore="Autofill,MissingPrefix,TextFields" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_login_text"
            android:textSize="20sp"
            android:backgroundTint="@color/biru_muda"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/login_design"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/login_design"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>